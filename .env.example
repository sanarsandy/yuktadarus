# Database Configuration
DB_HOST=db
DB_USER=odoj_user
DB_PASSWORD=odoj_password
DB_NAME=odoj_db
DB_PORT=5432

# Backend Configuration
PORT=8080
JWT_SECRET=supersecretkey

# Google OAuth Configuration
# Get these from Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/callback

# Frontend Configuration
NODE_ENV=development
# This should match GOOGLE_CLIENT_ID
NUXT_PUBLIC_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
NUXT_HOST=0.0.0.0
NUXT_PORT=3000
NITRO_HOST=0.0.0.0
NITRO_PORT=3000

# Postgres Container (Optional, matches DB config above)
POSTGRES_USER=odoj_user
POSTGRES_PASSWORD=odoj_password
POSTGRES_DB=odoj_db
